<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration>

 <property>
    <name>vnc.user</name>
    <value>root</value>
    <description>VNC user e.g. root</description>
 </property>
 
 <property require-input="true">
    <name>vnc.password</name>
    <value></value>
    <property-type>PASSWORD</property-type>
    <description>VNC password. Must be at least 6 characters</description>
 </property>
  <property>
    <name>vnc.geometry</name>
    <value>1400x860</value>
    <description>VNC screen geometry/resolution e.g. 1400x860</description>
 </property>
  <property>
    <name>log.file</name>
    <value>/var/log/vnc-stack.log</value>
    <description>Log file for VNC stack</description>
 </property> 
  <property>
    <name>install.eclipse</name>
    <value>true</value>
    <description>Should eclipse also be installed?</description>
 </property>
  <property>
    <name>eclipse.location</name>
    <value>http://ftp.osuosl.org/pub/eclipse//technology/epp/downloads/release/luna/SR1a/eclipse-java-luna-SR1a-linux-gtk-x86_64.tar.gz</value>
    <description>Location to pull eclipse bits from</description>
 </property>
 
 <property>
    <name>install.intellij</name>
    <value>true</value>
    <description>Should IntelliJ also be installed?</description>
 </property>
  <property>
    <name>intellij.location</name>
    <value>https://d1opms6zj7jotq.cloudfront.net/idea/ideaIC-14.1.4.tar.gz</value>
    <description>Location to pull IntelliJ bits from</description>
 </property>
  
  <property>
    <name>install.mvn</name>
    <value>true</value>
    <description>Should Maven also be installed?</description>
 </property>
 
  <property>
    <name>install.spark</name>
    <value>false</value>
    <description>Should Spark 1.2.0 TP also be installed? Only needed on HDP 2.2.0 and earlier. HDP 2.2.4 onwards comes with Spark 1.2.1 installed</description>
 </property>
 
  <property>
    <name>spark.location</name>
    <value>http://public-repo-1.hortonworks.com/HDP-LABS/Projects/spark/1.2.0/spark-1.2.0.2.2.0.0-82-bin-2.6.0.2.2.0.0-2041.tgz</value>
    <description>Location to pull Spark bits from</description>
 </property>
   
</configuration>

